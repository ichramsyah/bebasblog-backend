{
  "compilerOptions": {
    "target": "es2020", // Target versi JavaScript modern
    "module": "commonjs", // Sistem modul Node.js
    "rootDir": "./src", // Folder utama source code
    "outDir": "./dist", // Folder output setelah kompilasi
    "esModuleInterop": true, // Memungkinkan kompatibilitas modul
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Mengaktifkan semua pengecekan tipe yang ketat
    "skipLibCheck": true
  }
}
